@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="POST">
          <div class="form-row">
            <div class="col-md-12 mb-12">
                <input type="text" class="form-control mb-3" name="taskDescription" placeholder="Task">
            </div>
          </div>
            <div class="form-row">
            <div class="col-md-12 mb-12">
                <input type="text" class="form-control mb-3" name="Data" placeholder="Text">
            </div>
          </div>
        <button class="btn btn-success" type="submit" asp-action="GetTask">Send</button>
    </form>
</div>
